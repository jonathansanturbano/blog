<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<div class="container">
  <% @articles.each do |article| %>
    <% if article.photo.attached? %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path article.photo.key, height: 300, crop: :fill %>')">
        <%= article.title %>
      </div>
    <% else %>
      <div class="card-category"
          style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://upload.wikimedia.org/wikipedia/commons/b/be/KeizersgrachtReguliersgrachtAmsterdam.jpg')">
        <%= article.title %>
      </div>
    <% end %>
  <% end %>
</div>

<%= link_to 'New Article', new_article_path %>

<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<div class="container">
  <% @articles.each do |article| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= article.photos.attached? ? "#{cl_image_path(article.photos.first.key, height: 300, crop: :fill)}" : 'https://www.housingeurope.eu/image/163/sectionheaderpng/resourcesdef.png' %>)">
      <%= article.title %>
    </div>
  <% end %>
</div>

<%= link_to 'New Article', new_article_path %>
